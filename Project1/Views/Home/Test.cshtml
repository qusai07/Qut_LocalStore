<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QUT_BRAND</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

</head>
<body>

    @inject Microsoft.AspNetCore.Identity.UserManager<Project1.Models.User> ownermanager;
    @inject Microsoft.AspNetCore.Identity.SignInManager<Project1.Models.User> signInManager;
    <header>
        <nav class="navbar navbar-expand-lg bg-body-tertiary" style="background-color: antiquewhite;">
            <div class="container">
                <a class="navbar-brand" href="#">QUT</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link active dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false" asp-controller="Home" asp-action="Product">
                                Product
                            </a>  <ul class="dropdown-menu">
                                @if (!User.Identity.IsAuthenticated)
                                {
                                    <li><a class="dropdown-item" asp-controller="Home" asp-action="MenProduct">Men</a></li>
                                    <li><a class="dropdown-item" asp-controller="Home" asp-action="WomenProduct">Women</a></li>
                                    <li><a class="dropdown-item" asp-controller="Home" asp-action="KidsProduct">Kids</a></li>
                                }
                                else
                                {
                                    <li><a class="dropdown-item" asp-controller="Owner" asp-action="AddProduct">Add Product </a></li>
                                    <li><a class="dropdown-item" asp-controller="Owner" asp-action="EditProduct">Edit Product</a></li>
                                }

                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-disabled="false" asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link active" aria-disabled="false" asp-controller="Owner" asp-action="Profile">Profile</a>
                            </li>
                        }
                        @if (User.Identity.IsAuthenticated)

                        {
                            <li class="nav-item">
                                <a class="nav-link active" aria-disabled="false" asp-controller="Owner" asp-action="signout">Sign Out</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link active" aria-disabled="false" asp-controller="Owner" asp-action="Login">As Owner</a>

                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" aria-disabled="false" asp-controller="Admin" asp-action="Login">As Admin</a>

                            </li>
                        }
                    </ul>
                    <form class="d-flex" role="search">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-success" type="submit">Search</button>
                    </form>
                </div>
            </div>
        </nav>


    </header>




    <div class="container" style=" margin-top: 50px; margin-bottom: 50px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>


    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - QUT_BRAND - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>