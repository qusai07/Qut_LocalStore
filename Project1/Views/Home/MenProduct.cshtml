            <div class="box">
                <div class="box-content">
                    <div class="img-box">
                        <img src="~/Pic/MenProduct/w1.png" />
                    </div>
                    <div class="detail-box">
                        <div class="text">
                            <h6>
                                Men's Watch
                            </h6>
                            <h5>
                                <span>$</span> 300
                            </h5>
                        </div>
                        <div class="like">
                            <h6>
                                Like
                            </h6>
