                <div class="btn-box">
                    <a asp-action="BuyProduct" asp-controller="Home" asp-route-productName="Men Watch" asp-route-price="300" >
                        Buy
                    </a>
                </div>
            </div>
            @foreach (var product in Model.products)
            {
                <div class="box">
                    <div class="box-content">
                        <div class="img-box">
                            <img src="~/File/@product.Image"/>
                        </div>
                        <div class="detail-box">
                            <div class="text">
                                <h6>
                                    @product.Name
                                </h6>
                                <h5>
                                    <span>$</span> @product.Price
